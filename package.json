{
  "name": "mktemp",
  "description": "mktemp command for node.js",
  "version": "1.0.0",
  "author": "sasa+1 <sasaplus1@gmail.com>",
  "contributors": [
    "Michael Ficarra <github.public.email@michael.ficarra.me>",
    "rjz <rj@rjzaworski.com>"
  ],
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/register": "7.4.4",
    "@tsconfig/strictest": "^1.0.1",
    "@types/mocha": "5.2.7",
    "@types/node": "12.0.12",
    "@types/sinon": "7.0.13",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "babel-preset-power-assert": "3.0.0",
    "eslint": "8.18.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "espower-typescript": "9.0.2",
    "husky": "8.0.1",
    "is-ci": "^3.0.1",
    "lint-staged": "13.0.3",
    "mocha": "6.1.4",
    "npm-run-all": "^4.1.5",
    "power-assert": "1.6.1",
    "prettier": "2.7.1",
    "sinon": "7.3.2",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": ">=8.3"
  },
  "files": [
    "index.d.ts",
    "index.js",
    "index.js.map",
    "src/*.d.ts",
    "src/*.js",
    "src/*.js.map"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.+(js|ts)": [
      "eslint",
      "prettier --check"
    ],
    "*.+(md|yml)": "prettier --check",
    "!(package|package-lock).json": "prettier --check",
    "package.json": [
      "npx fixpack --dryRun",
      "prettier --check"
    ],
    "package-lock.json": "node -e 'process.exitCode = 1'"
  },
  "main": "./index.js",
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "parser": "json-stringify"
        }
      }
    ]
  },
  "readmeFilename": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/sasaplus1/mktemp.git"
  },
  "scripts": {
    "build": "run-s --print-label build:*",
    "build:cjs": "tsc --outDir dist/cjs --module commonjs",
    "build:esm": "tsc --outDir dist/esm --module esnext",
    "fix": "run-p --print-label fix:*",
    "fix:eslint": "eslint --fix .",
    "fix:fixpack": "npx fixpack",
    "fix:prettier": "prettier --write .",
    "lint": "run-p --print-label lint:*",
    "lint:eslint": "eslint .",
    "lint:fixpack": "npx fixpack --dryRun",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc --noEmit",
    "prepare": "is-ci || husky install",
    "test": "mocha"
  },
  "sideEffects": false,
  "types": "./index.d.ts"
}
